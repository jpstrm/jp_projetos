{
	public static void escreve(Writer arquivo, String texto)
	{
		try
		{
			FileWriter writer = new FileWriter(arquivo);
			BufferedWriter bufWriter = new BufferedWriter(arquivo);
			
		}
		catch (IOException e)
		{
			System.out.println(e.getMessage());
		}
	}
}